{
  "parserOptions": {
    "ecmaVersion": 6
  },
  "env": {
    "node": true,
    // "browser": true,
    "es6": true
  },
  "rules": {
    // "comma-dangle": ["error", "never"],
    "no-unused-vars": [
      "error",
      {
        "vars": "local",
        "args": "none"
      }
    ],
    "no-console": "off",
    "parser": "babel-eslint"
    // "func-names": "off",
    // "no-process-exit": "off",
    // "object-shorthand": "off",
    // "class-methods-use-this": "off"

    //  "react/jsx-filename-extension": 0
